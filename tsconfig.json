{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "paths": {
      "config/*": [
        "../config/*"
      ]
    }
  },
  "exclude": ["node_modules", "dist"]
}
